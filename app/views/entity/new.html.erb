<%= form_with model: @entity, method:'post', 
      class:'form',
      url: entity_create_path(category_id: @category.id) do |form| %>
  <div class="navbar">
    <a class="arrow-back" data-method="get" href="<%=entity_index_path(category_id: @category.id)%>">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
    </a>
    <h2>Add Transaction</h2>
    <div class="actions">
      <%= form.submit "Create" %>
    </div>
  </div>
    <div class="field">
      <%= form.text_field :name, autofocus: true, placeholder: "Name" %>
      <%= form.number_field :amount, autofocus: true, placeholder: "Amount" %>
      <%= form.select :selected_categories, current_user.categories.collect { |category| [category.name, category.id] }, {
        :multiple => true,
      }  %>
    </div>
  <% end %>