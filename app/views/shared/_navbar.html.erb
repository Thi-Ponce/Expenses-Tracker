<div class="menu-options invisible">
  <button type="button" id="close-btn">X</button>
  <div class="menu-img">
    <% if current_user.image.attached?%>
      <img src=<%=url_for(current_user.image)%> class="category-img"/>
    <%else%>
      <img src=<%=image_path("user.png")%> class="category-img"/>
    <%end%>
  </div>
  <h3 class="user-name-menu">
    <%=current_user.name%>
  </h3>
  <ul>
    <li>
      <%= link_to "Home", root_path, class: '' %>
    <li>
      <%=link_to "Log out", destroy_user_session_path, 
          method: :get %>
    </li>
  </ul>
  <hr>
  <%= javascript_include_tag 'navigation' %>
</div>